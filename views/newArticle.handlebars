<div class="edit-container">
    <h2>New Article</h2>
    <br>
    <form id="newArticle" action="./newArticle" method="POST" enctype="multipart/form-data">
        <div class=articleTitle>
            <label for="articleTitle">Article Title:</label>
            <input type="text" name="articleTitle" id="articleTitle" required>
        </div>
        <br>
        <div>
            <label for="imageFile">Upload an image here! </label>
            <input id="imageFile" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp" required>
        </div>
        <br>
        <div>
            <textarea cols="50" rows="40" name="articleBody" id="articleBody"
                Placeholder="Create your article here"></textarea>
        </div>
        <br>
        <div class="submit">
            <button class="button" type="submit">Submit Article</button>
        </div>
    </form>
</div>